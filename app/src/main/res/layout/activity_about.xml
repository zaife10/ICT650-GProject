<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0d6e4"
    tools:context=".about">


    <ImageView
        android:id="@+id/img1"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="43dp"
        android:src="@drawable/qila"
        app:layout_constraintBottom_toTopOf="@+id/img2"
        app:layout_constraintEnd_toStartOf="@+id/name1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="NOR AQILAH BINTI MOHD ZAINUDDIN \n2020827632"
        app:layout_constraintBottom_toBottomOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toTopOf="@+id/img1" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/rid"
        app:layout_constraintBottom_toTopOf="@+id/img3"
        app:layout_constraintEnd_toStartOf="@+id/name2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="MUHAMMAD RIDWAN AKMAL BIN NOR AZNAM \n2020602622"
        app:layout_constraintBottom_toBottomOf="@+id/img2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img2"
        app:layout_constraintTop_toTopOf="@+id/img2" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/zaife"
        app:layout_constraintBottom_toTopOf="@+id/img4"
        app:layout_constraintEnd_toStartOf="@+id/name3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img2" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="43dp"
        android:gravity="center"
        android:text="MUHAMMAD ZAIFE BIN HAMZAH \n2020813046"
        app:layout_constraintBottom_toTopOf="@+id/name4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img3"
        app:layout_constraintTop_toBottomOf="@+id/img2" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/shar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/name4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img3" />

    <TextView
        android:id="@+id/name4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="SHARIFAH 'ALAWIYAH BINTI SYED MUHAMMAD \n2020601666"
        app:layout_constraintBottom_toBottomOf="@+id/img4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img4"
        app:layout_constraintTop_toTopOf="@+id/img4" />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="Developers Details \nCS2515A"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="31dp"
        android:autoLink="web"
        android:gravity="center"
        android:text="KEPULISAN HOSPITAL FINDER APPLICATION \nhttps://github.com/zaife10/ICT650-Group-Project"
        app:layout_constraintBottom_toTopOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="@+id/about"
        app:layout_constraintTop_toBottomOf="@+id/about" />
</androidx.constraintlayout.widget.ConstraintLayout>